<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProductDetailsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:scrollingCache="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp">

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/pager"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:background="@color/black" />

                        <LinearLayout
                            android:id="@+id/layout_dots"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:orientation="horizontal" />

                    </RelativeLayout>

                </LinearLayout>
                <View
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:background="#c0c0c0"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
<LinearLayout
    android:layout_marginRight="10dp"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageView
                android:visibility="visible"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@drawable/wishliston" />

            <LinearLayout
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/back"
                    android:visibility="visible"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon33" />
            </LinearLayout>

        </RelativeLayout>
    <TextView
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:text="30% off "
        android:background="@drawable/accffy"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true" />
</LinearLayout>
    </RelativeLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_below="@id/r1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:visibility="visible"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:id="@+id/pname"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:text="The Prime - Luxury Watch Boutique Or This is simply prooduct title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:textSize="14dp"
            android:textStyle="bold"
            android:id="@+id/pcat"
            android:text=" ( Sniker Fabric )"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="KD "
                        android:textColor="@color/bottom_color"
                        android:textStyle="bold" />
                    <TextView
                        android:textSize="16dp"
                        android:id="@+id/oprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=" 4.600 "
                        android:textColor="@color/bottom_color"
                        android:textStyle="bold" />
                    <TextView
                        android:textSize="16dp"
                        android:layout_marginLeft="0dp"
                        android:id="@+id/pprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="KD 500.00 "
                        android:textColor="@color/hint"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:paddingRight="5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/minus"
                                android:gravity="center"
                                android:background="@drawable/plusback"
                                android:textColor="@color/white"
                                android:text=" - "
                                android:layout_width="25dp"
                                android:layout_height="25dp" />
                            <TextView
                                android:paddingHorizontal="5dp"
                                android:id="@+id/pquantity"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:padding="5dp"
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                android:text="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:visibility="gone"
                                android:paddingRight="5dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:textSize="15dp"
                                android:textColor="@color/colorPrimary"
                                android:text="gm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:background="@drawable/plusback"
                                android:text=" + "
                                android:id="@+id/plus"
                                android:layout_width="25dp"
                                android:layout_height="25dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:visibility="visible"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:text="Description "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:justificationMode="inter_word"
                android:visibility="visible"
                android:textSize="12dp"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:background="#9FDDDADA"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="15dp"
            android:textColor="@color/black"
            android:text="Select Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_gravity="left"
                android:id="@+id/recyclerviewcolor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:layout_marginVertical="0dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="15dp"
            android:textColor="@color/black"
            android:text="Size  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_gravity="left"
                android:id="@+id/recyclerviewsize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:background="@color/hint"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:visibility="visible"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:text="Product Features "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginTop="5dp"
                android:background="@color/hint"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="visible"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:text="Brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:text="Reebok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@color/hint"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:text="Material"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:id="@+id/pbrand1"
                    android:textSize="14dp"
                    android:text="Polyester"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@color/hint"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:text="Model Name "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:id="@+id/pbrand2"
                    android:textSize="14dp"
                    android:text="Galexy J5 Prime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@color/hint"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:text="Color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:text="Black,Red,Golden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@color/hint"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:text="Model Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:id="@+id/pbrand"
                    android:textSize="14dp"
                    android:text="Galexy J5 Prime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:background="@color/hint"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/addtocart"
            android:layout_marginHorizontal="10dp"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/add_tocart_border"
            android:textAlignment="center"
            android:text="Add To Cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/share"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send to a Friend "/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share this product : "/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@drawable/facebbok"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@drawable/twitter"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@drawable/google_plus"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </RelativeLayout>
       <RelativeLayout
           android:layout_marginTop="10dp"
           android:gravity="center_vertical"
           android:paddingVertical="10dp"
           android:background="#9FDDDADA"
           android:layout_width="match_parent"
           android:layout_height="80dp">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent">
               <ImageView
                   android:layout_marginLeft="10dp"
                   android:src="@drawable/s3"
                   android:layout_width="60dp"
                   android:layout_height="60dp"/>
               <LinearLayout
                   android:orientation="vertical"
                   android:gravity="center"
                   android:layout_marginLeft="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent">
                   <TextView
                       android:textStyle="bold"
                       android:textSize="15dp"
                       android:textColor="@color/black"
                       android:text="Company Name Here"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                   <RatingBar
                       android:theme="@style/RatingBar"
                       style="@style/Widget.AppCompat.RatingBar.Indicator"
                       android:layout_below="@+id/name"
                       android:id="@+id/ratingshow"
                       android:layout_marginLeft="-30dp"
                       android:layout_width="wrap_content"
                       android:layout_height="30dp"
                       android:rating="3"
                       android:scaleX="0.5"
                       android:scaleY="0.5"
                       />
               </LinearLayout>

           </LinearLayout>
           <LinearLayout
               android:layout_alignParentEnd="true"
               android:gravity="center_vertical"
               android:layout_width="wrap_content"
               android:layout_height="match_parent">
           <Button
               android:layout_marginRight="20dp"
               android:paddingHorizontal="10dp"
               android:textColor="@color/white"
               android:background="@drawable/viewprofile_border"
               android:layout_width="wrap_content"
               android:layout_height="35dp"
               android:text="view profile"/>
           </LinearLayout>
       </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/r2"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:gravity="center_vertical"
                android:paddingLeft="0dp"
                android:text="Related Products"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <LinearLayout
                android:visibility="gone"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/seeall_border"
                    android:textColor="@color/white"
                    android:id="@+id/catseeall1"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="See All"/>
            </LinearLayout>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:scrollbars="none"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/recyclerviewrelatedproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>