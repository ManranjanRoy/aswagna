<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_weight="1"
    android:layout_width="185dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/card1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="2dp"
            android:background="@drawable/shadow_background"
            android:layout_marginHorizontal="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
                <ImageView
                    android:paddingTop="25dp"
                    android:paddingRight="25dp"
                    android:paddingLeft="25dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/pimg"
                    android:scaleType="fitCenter"
                    android:src="@drawable/p1"
                    android:layout_width="match_parent"
                    android:layout_height="160dp" />
            </RelativeLayout>
            <LinearLayout
                android:paddingBottom="10dp"
                android:background="#9EE4F7FA"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textSize="15dp"
                android:id="@+id/pname"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:text=" Cotton Sniker Fabric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="KD "
                    android:textColor="@color/bottom_color"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/oprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=" 500.00 "
                    android:textColor="@color/bottom_color"
                    android:textStyle="bold" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/pprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="KD 500.00 "
                    android:textColor="@color/hint"
                    android:textStyle="bold" />
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp">
            <TextView
                android:paddingBottom="5dp"
                android:textSize="13dp"
                android:gravity="center"
                android:background="@drawable/aay"
                android:id="@+id/pstatus"
                android:textColor="@color/white"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:text="30% Off"/>
        <ImageView
            android:id="@+id/pwishlist"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:src="@drawable/wishliston"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </RelativeLayout>
</RelativeLayout>